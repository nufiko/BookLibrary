@model Rekcja.Models.Borrower

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Borrower</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<h4>Borrowed books</h4>
<table class="table">
    <tr>
        <th></th>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Borrow Date</th>

    </tr>
    @foreach (var item in Model.Books)
    {
        <tr>
            <td>@Html.ActionLink("Return", "ReturnBook", new { id=item.ID })</td>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.Isbn</td>
            <td>@item.BorrowDate.Value.ToString("dd MMMM yyyy")</td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
